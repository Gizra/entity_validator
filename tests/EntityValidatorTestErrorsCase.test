<?php

/**
 * @file
 * Contains EntityValidatorTestErrorsCase.
 */

class EntityValidatorTestErrorsCase extends DrupalWebTestCase {

  public static function getInfo() {
    return array(
      'name' => 'Validate errors',
      'description' => 'Test the errors which will be thrown to the user.',
      'group' => 'Entity validator',
    );
  }

  function setUp() {
    parent::setUp('entity_validator', 'entity_validator_example');
  }

  /**
   * Test the validation on an entity.
   */
  function testValidate() {
    $values = array(
      'type' => 'article',
      'uid' => 0,
    );
    $node = entity_create('node', $values);
    $handler = entity_validator_get_validator_handler('node', 'article');

    try {
      $handler->validate($node);
    }
    catch (\EntityValidatorException $e) {
      debug($e->getMessage());
      $text = "The validation process failed: The field title can&#039;t be empty, The author of the node must be authenticated user";
      $this->assertEqual($e->getMessage(), $text, 'The expected message was not thrown to the user.');
    }
  }
}
